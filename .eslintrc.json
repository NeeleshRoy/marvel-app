{
	"extends": "airbnb",
	"plugins": [ "react", "jsx-a11y", "import" ],
	"rules": {
		"indent": [ "error", 2 ],
		"linebreak-style": [ "error", "unix" ],
		"quotes": [ "error", "single" ],
		"semi": [ "error", "always" ],
		"comma-dangle": [ "error", "always" ],
		"no-cond-assign": [ "error", "always" ],
		"no-console": "off",
		"arrow-parens": "off"
	},
	"env": {
		"browser": true,
		"node": true
	}
}
